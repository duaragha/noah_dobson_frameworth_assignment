    top: 10px;
    left: 10px;
    background: #ff4444;
    color: white;
    padding: 5px 15px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: bold;
  }

  .product-info {
    padding: 20px;
  }

  .product-title {
    font-size: 18px;
    font-weight: bold;
    margin-bottom: 10px;
    color: #333;
  }

  .product-description {
    color: #666;
    font-size: 14px;
    margin-bottom: 15px;
    line-height: 1.4;
  }

  .product-price {
    font-size: 24px;
    font-weight: bold;
    color: #000;
    margin-bottom: 15px;
  }

  .product-price .original-price {
    text-decoration: line-through;
    color: #999;
    font-size: 18px;
    margin-right: 10px;
  }

  .product-actions {
    display: flex;
    gap: 10px;
  }

  .btn-add-to-cart {
