    font-weight: bold;
    color: #000;
    margin-bottom: 15px;
  }

  .product-price .original-price {
    text-decoration: line-through;
    color: #999;
    font-size: 18px;
    margin-right: 10px;
  }

  .product-actions {
    display: flex;
    gap: 10px;
  }

  .btn-add-to-cart {
    flex: 1;
    padding: 12px 20px;
    background: #000;
    color: white;
    border: none;
    border-radius: 5px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.3s;
  }

